{
  "name": "Copy Rich Link",
  "description": "Copy the page title and URL as rich text.",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  },
  "permissions": ["activeTab", "clipboardWrite"]
}
